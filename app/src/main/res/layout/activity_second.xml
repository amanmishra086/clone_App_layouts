<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/pink"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l1"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/menuIcon"
            android:layout_width="75dp"
            android:layout_height="50dp"

            android:layout_marginStart="3dp"

            android:layout_marginTop="8dp"

            android:scaleType="centerInside"

            android:src="@drawable/group_10538"

            />



        <TextView

            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"


            android:layout_marginTop="13dp"

            android:text="Likes"

            android:textColor="@android:color/white"

            android:textSize="25sp"

            android:textStyle="bold"

            />





        <ImageView

            android:id="@+id/message"

            android:layout_width="40dp"

            android:layout_height="40dp"

            android:layout_marginTop="8dp"

            android:layout_marginEnd="8dp"

            android:scaleType="fitXY"

            android:src="@drawable/like"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="80dp"
        android:background="@drawable/bgshape"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="130dp"
        android:layout_marginTop="20dp">

        <EditText

            android:id="@+id/searchEditText"

            android:layout_width="match_parent"

            android:layout_height="50dp"

            android:layout_centerHorizontal="true"

            android:layout_marginStart="20dp"

            android:layout_marginTop="16dp"

            android:layout_marginEnd="20dp"

            android:background="@drawable/group_10546"

            android:hint="Search messages..."

            android:paddingStart="48dp"

            android:paddingEnd="8dp"

            android:textColor="@android:color/white"

            android:textColorHint="@android:color/black"

            android:textSize="20sp" />

        <androidx.recyclerview.widget.RecyclerView

            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerview_id">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <com.example.layoutexamples.CurvedBottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/nav_id"

        android:labelFor="@+id/nav_id"
        android:layout_height="52dp"
        android:background="@drawable/nav_bg"
        app:menu="@menu/nav_menu"

        android:backgroundTint="@android:color/white"

        app:itemIconTint="@android:color/holo_red_dark"

        app:itemTextColor="@android:color/holo_red_dark"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/group_10503"
    android:layout_alignParentBottom="true"/>





</RelativeLayout>